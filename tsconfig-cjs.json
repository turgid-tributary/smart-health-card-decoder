{
  "compilerOptions": {
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "importHelpers": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "outDir": "cjs",
    // Transpile to Node-14 compatible JS
    "allowSyntheticDefaultImports": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "target": "ES2020"
  },
  "include": [
    "src"
  ]
}
